<head>
    <link href="/assets/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/clubs.css" rel="stylesheet">
</head>

<body>
<div class="container-fluid">
  <div class="text-center">
    <h1>Clubs Around You</h1>
  </div>
<p id="notice"><%= notice %></p>
<% @clubs.each do |club| %>
<div class="wrap ">
       <h1><%= club.name %></h1>
       <h6><img src="/assets/club.jpg"></h6>
        <div class="text-center">
       <h6> <%= club.category %></h6>
       <%= button_to "View Details", club, :method => "get", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
</body>