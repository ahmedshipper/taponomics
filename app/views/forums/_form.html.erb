<div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
<div class="row">
  <div class="span4">
  <%= simple_form_for @forum, html: {multipart: true } do |f| %>

    <fieldset>
      <h1 class="text-center login-title"><strong> Hey Buddy!</strong> </h1>
      <p class="text-center login-title"><STRONG>Tell us what's the matter</STRONG></p>
      <%= f.input :question, placeholder: "Tell us your problem, we promise we will help", :label => 'Add Your Problem' %>
      <%= f.input :answer, :as => :hidden %>
          <div><%= f.button :submit, "Don't worry! Leave it on us", class: "btn btn-lg btn-info btn-block" %></div>
      <% end %>


    

