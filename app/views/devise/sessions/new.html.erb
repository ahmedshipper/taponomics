  <h1>
    
  </h1>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>

    <fieldset>
      <h1 class="text-center login-title"><strong> Get In With Your</strong> </h1>  
    <%= f.input :email, placeholder: 'Email', label: false %>
    <%= f.input :password, placeholder: 'Password', label: false %>


    <% if devise_mapping.rememberable? -%>
      <div><%= f.input :remember_me, as: :boolean, label: 'Keep me logged in' %></div>
    <% end -%>

    <div><%= f.button :submit, "Just Sign In!", class: "btn btn-lg btn-info btn-block" %></div>
      <% end %>
      <p> 
</p>
              <div class="text-center">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
<p> 
</p>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up Now", new_registration_path(resource_name) %><br />
<% end -%>
      </fieldset>
  </div>
</div>
</div>
</div>
